<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.FlowPane?>
<FlowPane xmlns:fx="http://javafx.com/fxml/1"
          fx:id="windowBar"
          alignment="CENTER_LEFT"
          columnHalignment="CENTER"
          hgap="8"
          prefHeight="16"
          styleClass="flow-pane"
          stylesheets="@WindowBarLeft.css"
          vgap="8"
          xmlns="http://javafx.com/javafx/10.0.1"
          fx:controller="cn.j1angvei.adbfx.home.WindowBarController">
    <fx:define>
        <ImageView fx:id="ivMaxOff"
                   fitHeight="8.0"
                   fitWidth="8.0"
                   pickOnBounds="true"
                   preserveRatio="true"
                   styleClass="img-max-off">
            <image>
                <Image url="@img/max_off_l.png"/>
            </image>
        </ImageView>
        <ImageView fx:id="ivMaxOn"
                   fitHeight="8.0"
                   fitWidth="8.0"
                   pickOnBounds="true"
                   preserveRatio="true"
                   styleClass="img-max-on">
            <image>
                <Image url="@img/max_on_l.png"/>
            </image>
        </ImageView>
    </fx:define>
    <children>
        <Button fx:id="btnClose"
                alignment="CENTER"
                contentDisplay="CENTER"
                mnemonicParsing="false"
                styleClass="btn-close">
            <graphic>
                <ImageView fx:id="ivClose"
                           fitHeight="8.0"
                           fitWidth="8.0"
                           pickOnBounds="true"
                           preserveRatio="true"
                           styleClass="img-close">
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnMinimize"
                alignment="CENTER"
                contentDisplay="CENTER"
                mnemonicParsing="false"
                styleClass="btn-min">
            <graphic>
                <ImageView fx:id="ivMin"
                           fitHeight="8.0"
                           fitWidth="8.0"
                           pickOnBounds="true"
                           preserveRatio="true"
                           styleClass="img-min">
                    <image>
                        <Image url="@img/min_l.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <ToggleButton fx:id="tBtnMaximize"
                      mnemonicParsing="false"
                      styleClass="tg-btn-max">
        </ToggleButton>
    </children>
</FlowPane>
