<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.1"
      fx:controller="cn.j1angvei.adbfx.functions.apps.PackageListController">
    <children>
        <TitledPane text="Filter Packages">
            <content>
                <FlowPane hgap="8.0" vgap="8.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="4.0">
                            <children>
                                <Label text="App status:"/>
                                <RadioButton mnemonicParsing="false" text="All" toggleGroup="$toggleAppStatus"
                                             userData="">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="toggleAppStatus"/>
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton mnemonicParsing="false" selected="true" text="Enabled"
                                             toggleGroup="$toggleAppStatus" userData="-e"/>
                                <RadioButton mnemonicParsing="false" text="Disabled" toggleGroup="$toggleAppStatus"
                                             userData="-d"/>
                            </children>
                        </HBox>
                        <Separator orientation="VERTICAL"/>
                        <HBox alignment="CENTER_LEFT" spacing="4.0">
                            <children>
                                <Label text="App types:"/>

                                <RadioButton mnemonicParsing="false" text="All" toggleGroup="$toggleAppType"
                                             userData="">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="toggleAppType"/>
                                    </toggleGroup>
                                </RadioButton>
                                <RadioButton mnemonicParsing="false" text="System" toggleGroup="$toggleAppType"
                                             userData="-s"/>
                                <RadioButton mnemonicParsing="false" selected="true" text="Third party"
                                             toggleGroup="$toggleAppType" userData="-3"/>
                            </children>
                        </HBox>
                    </children>
                </FlowPane>
            </content>
        </TitledPane>
        <TableView fx:id="tablePackageList" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
            <placeholder>
                <Text fx:id="textListHint" text="No package install, right click to refresh..."/>
            </placeholder>
            <columns>
                <TableColumn fx:id="sortColumn" minWidth="100.0" prefWidth="200.0" text="packageName">
                    <cellValueFactory>
                        <PropertyValueFactory property="packageName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="90" sortable="false" text="versionCode">
                    <cellValueFactory>
                        <PropertyValueFactory property="versionCode"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="90" sortable="false" text="versionName">
                    <cellValueFactory>
                        <PropertyValueFactory property="versionName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="90" sortable="false" text="targetSdk">
                    <cellValueFactory>
                        <PropertyValueFactory property="targetSdk"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="140.0" sortable="false" text="firstInstall">
                    <cellValueFactory>
                        <PropertyValueFactory property="firstInstall"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="140.0" sortable="false" text="lastUpdate">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastUpdate"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <sortOrder>
                <fx:reference source="sortColumn"/>
            </sortOrder>
        </TableView>
        <HBox spacing="8.0">
            <children>
                <Button fx:id="btnRefreshList" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        text="Refresh List" HBox.hgrow="SOMETIMES"/>
                <Region HBox.hgrow="SOMETIMES"/>
                <MenuButton fx:id="menuBtnPermissions" mnemonicParsing="false" text="Permissions">
                    <items>
                        <MenuItem mnemonicParsing="false">
                            <graphic>
                                <ListView fx:id="listPermissions" prefHeight="200" prefWidth="350"/>
                            </graphic>
                        </MenuItem>
                    </items>
                </MenuButton>
                <MenuButton fx:id="menuBtnHide" mnemonicParsing="false" text="Hide it">
                    <items>
                        <MenuItem fx:id="menuHide" mnemonicParsing="false" text="Hide"/>
                        <MenuItem fx:id="menuUnhide" mnemonicParsing="false" text="Unhide"/>
                    </items>
                </MenuButton>

                <Button fx:id="btnApkPath" mnemonicParsing="false" text="Apk Path"/>

                <Button fx:id="btnClearData" mnemonicParsing="false" text="Clear Data"/>
            </children>
            <VBox.margin>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </VBox.margin>
        </HBox>
        <TitledPane fx:id="titledResult" expanded="false" text="Operation Results">
            <content>
                <TextArea fx:id="areaResult"/>
            </content>
        </TitledPane>
    </children>
</VBox>
