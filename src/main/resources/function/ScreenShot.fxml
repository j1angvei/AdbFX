<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="8.0" xmlns="http://javafx.com/javafx/10.0.1"
      fx:controller="cn.j1angvei.adbfx.functions.device.ScreenShotController">
    <children>
        <TitledPane expanded="false" text="Param Settings" VBox.vgrow="NEVER">
            <content>
                <VBox alignment="TOP_CENTER" spacing="8.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="8.0">
                            <children>
                                <Label text="Device  orientation:"/>
                                <CheckBox fx:id="checkLandscape" mnemonicParsing="false" text="Landscape"/>
                                <Region HBox.hgrow="SOMETIMES"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="8.0">
                            <children>
                                <Label text="Save location:"/>
                                <TextField fx:id="fieldSaveDir" editable="false"
                                           promptText="Choose dir to save screenShot" HBox.hgrow="ALWAYS"/>
                                <Button fx:id="btnChooseDir" mnemonicParsing="false" text="Choose"/>
                            </children>
                        </HBox>
                        <!--<Label text="Hint"/>-->
                    </children>
                </VBox>
            </content>
        </TitledPane>
        <StackPane VBox.vgrow="SOMETIMES">
            <children>
                <Pagination fx:id="paginationImages" pageCount="20" StackPane.alignment="CENTER"/>
                <VBox fx:id="boxScale" alignment="CENTER" maxHeight="160.0" maxWidth="32.0" prefWidth="32.0"
                      spacing="4.0"
                      style="-fx-background-color: rgba(255,255,255,0.7);-fx-border-radius: 32; -fx-background-radius: 32"
                      StackPane.alignment="CENTER_LEFT">
                    <children>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/scale_up_1.png"/>
                            </image>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </ImageView>
                        <Slider fx:id="sliderScale" orientation="VERTICAL" VBox.vgrow="NEVER" majorTickUnit="0.05"
                                value="0.15" max="1" min="0.1"/>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/scale_down_1.png"/>
                            </image>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </ImageView>
                    </children>
                    <StackPane.margin>
                        <Insets bottom="32.0" left="32.0" top="32.0"/>
                    </StackPane.margin>
                    <padding>
                        <Insets bottom="8.0" top="8.0"/>
                    </padding>
                </VBox>
                <Button fx:id="btnTakeScreenShot" mnemonicParsing="false" prefHeight="72.0" prefWidth="72.0"
                        style="-fx-background-radius: 72; -fx-border-radius: 72;" text="Take"
                        StackPane.alignment="CENTER_RIGHT">
                    <StackPane.margin>
                        <Insets right="32.0"/>
                    </StackPane.margin>
                </Button>
            </children>
        </StackPane>
    </children>
</VBox>
